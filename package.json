{
  "name": "@sshadows/objid-mcp",
  "version": "1.0.1",
  "description": "MCP server for AL Object ID Ninja - Provides intelligent object ID management for Microsoft Dynamics 365 Business Central development",
  "main": "dist/server.js",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "test": "jest",
    "test:integration": "jest tests/integration --testTimeout=30000",
    "test:live": "ts-node test-backend-live.ts",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "al",
    "business-central",
    "object-id",
    "dynamics-365",
    "model-context-protocol",
    "claude"
  ],
  "author": "SShadowS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SShadowS/objid-mcp.git"
  },
  "homepage": "https://github.com/SShadowS/objid-mcp#readme",
  "bugs": {
    "url": "https://github.com/SShadowS/objid-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "comment-json": "^4.2.5"
  },
  "devDependencies": {
    "@types/node": "^18.19.68",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
